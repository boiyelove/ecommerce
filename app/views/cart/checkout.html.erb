<div class="jumbotron">
		<div class="row">
			<div class="col-md-6">
				<h3><%= @current_cart.total_quantity %> Item(s)</h3>
			</div>
			<div class="col-md-6 text-right">
				<h2>Sub total: <%= number_to_currency(@cart.sub_total) %></h2>
			</div>
		</div>
	</div>
	<br>
<div class="row">

	<% if current_user %>
<!-- 		<div class="col-md-6">
			
		</div> -->
		<div class="col-md-6">
			<h4>Payment Information</h4>
		<br>
		<%= form_with model: @payinfo, local: true, url: checkout_path do |form| %>
		<% if @payinfo.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>

	      <ul>
	        <% user.errors.full_messages.each do |message| %>
	          <li><%= message %></li>
	        <% end %>
	      </ul>
	    </div>
				  <% end %>
		<div class="row form-block">
			    <%= label_tag :card_number %>
    			<%= form.text_field :card_number, class: 'form-control' %>
		</div>
		<div class="row form-block">
			<div class="col-md-4">
				<%= label_tag :card_exp %>
				<%= form.text_field :card_exp, class: 'form-control', placeholder:"MM/YY" %>
			</div>
			<div class="col-md-4">
				<%= label_tag :card_pin %>
				<%= form.text_field :card_pin, class: 'form-control', placeholder:"CCV" %>
			</div>
		</div>
		<br>
		<hr>
		<h4>Shipping Information</h4>
		<br>

		 <div class="row form-block">
			<%= label_tag :address %>
	    	<%= form.text_field :address, class: 'form-control' %>
	    		
	    	</div>

		<div class="row form-block">
			<div class="col-md-6">
			<%= label_tag :state %>
	    	<%= form.text_field :state, class: 'form-control' %>
			</div>
			<div class="col-md-6">
				<%= label_tag :country %>
				<%= form.select "country",options_from_collection_for_select(@countries, "alpha2", "name"), class: "form-control" %>

			</div>
	</div>
	<br>
	<div class="row form-block">
		<%=  form.submit "Complete Order", class: "btn btn-success col-md-6" %>	
	</div>

	<% end %>

		</div>

	<% else %>
		<div class="col-md-6">
			<h4>Login</h4>
			<br>
			<%= form_tag sessions_path do |form| %>
				<div class="field">
					<%= label_tag :email %>
					<%= text_field_tag :email,"", class: "form-control" %>
				</div>

				<div class="field">	
					<%=	label_tag :password %>
					<%= password_field_tag :password,"", class: "form-control" %>
				</div>
				<div class="container">
									<div class="row">	
					<%= submit_tag "Login", class: "btn btn-primary col-md-4" %>
				</div>
				</div>
				<% end %>	
		</div>
		<div class="col-md-6">
			<h4>or Register</h4>
			<br>
			<%= form_with model: @user, local: true do |form| %>
				  <% if @user.errors.any? %>
				    <div id="error_explanation">
				      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>

				      <ul>
				        <% user.errors.full_messages.each do |message| %>
				          <li><%= message %></li>
				        <% end %>
				      </ul>
				    </div>
				  <% end %>

				  <div class="field">
				    <%= form.label :firstname %>
				    <%= form.text_field :firstname, class: "form-control" %>
				  </div>

				  <div class="field">
				    <%= form.label :lastname %>
				    <%= form.text_field :lastname, class: "form-control" %>
				  </div>

				  <div class="field">
				    <%= form.label :email %>
				    <%= form.text_field :email, class: "form-control" %>
				  </div>

				  <div class="field">
				    <%= form.label :password %>
				    <%= form.password_field :password, class: "form-control" %>
				  </div>

				  <div class="field">
				    <%= form.label :password_confirmation %>
				    <%= form.password_field :password_confirmation, class: "form-control" %>
				  </div>
					<div class="container">
					  <div class="row">
				    <%= form.submit "Register", class: "btn btn-primary ml-auto col-md-4"%>
				  </div>	
					</div>

				<% end %>

			


		</div>

	<% end %>
	<!-- logged in/out end -->
		
	</div>
