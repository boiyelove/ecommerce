
	 <h2>Cart</h2>
	 <br>
	<div class="jumbotron">
			<div class="row">
		<div class="col-md-6">
			<h3>54 Items</h3>
		</div>
		<div class="col-md-6 text-right">
			<h2>Total = $234565</h2>
		</div>
	</div>
	</div>
	<div class="row">
		<p>	Cart Items Is <%= puts @current_cart.order_items %></p>
		<table class="table">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Item</th>
					<th scope="col">Rate</th>
					<th scope="col">Qty</th>
					<th scope="col">Subprice</th>
					<th scope="col" colspan="3">Action</th>
				</tr>
			</thead>
			<tbody>
				<%=  @current_cart.order_items.each do |order_item| %>
					<tr>
					<th scope="row">#</th>
					<td><%= order_item.product.title %></td>
					<td>$<%= number_to_currency(order_item.product.price) %></td>
					<td>x<%= order_item.quantity %> </td>
					<td>$<%= number_to_currency(order_item.total_price) %></td>
					<td><%= link_to "Add one", order_item_add_path(:id => order_item), method: post %></td>
					<td><%= link_to "Reduce one", order_item_reduce_path(:id => order_item), method: post %></td>
					<td><%= link_to "Remove Item", order_item_add_path(:id => order_item), method: :delete %></td>
				</tr>
						
				<% end %>			
			
			</tbody>
		</table>

	</div>
	<div style="margin-top: 3%;" class="text-center">
		 <h4><%= link_to('Continue Shopping', products_path) %></h4>	
	</div>
