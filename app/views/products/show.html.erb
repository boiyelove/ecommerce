  <body>
    
<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>
  </div>
  <div class="row">
    <div class="col-md-6">
      <% if @product.image.attached? %>
        <% image_tag @product.image %>
      <% end %>
    </div>
    <div class="col-md-6">
      <div class="row">
        <div class="col-md-6">
          <%= link_to 'Edit', edit_product_path(@product) %>
        </div>
        <div class="col-md-6">
          <%= link_to 'Back', products_path %>
        </div>
      </div>
      <div class="row form-block">
        <h2> <%= @product.title %></h2>
      </div>
      <div class="row form-block"><h3><%= @product.price %></h3>$</div>
      <div class="row form-block">
        <div class="form-inline">
          <label for="">Quantity</label>
          <input type="number" class="form-control" min=1 default=1>
        </div>
      </div>
              <div class="row form-block">
        <%= button_to 'Add to cart', order_items_path(:product_id => @product.id), class: "btn btn-primary"  %>
          
        </div>


    </div>
  </div>
  <br>
  <br>
  <div class="row">
    <%= @product.description %>
</div>
