<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
        <!-- Bootstrap CSS and Font Awesome CDN-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>


    <style>
      .form-block{
      margin-top: 2%;
      margin-bottom: 2%;

      }
      .product-grid-item{
        padding:2%;
      }
      .search-form{
        margin-top: 4%;
        margin-bottom: 3%;
      }
      #content{
        margin-top: 2%;
      }
    </style>

  </head>


  </head>

  <body style="margin: 0; padding: 0;">
  
    <nav class="navbar navbar-dark bg-dark">
      <div class="container">
             <%= link_to('Ecommerce', products_path, class: 'navbar-brand') %>
           
    <ul class="navbar nav">
      <li class="nav-item">
      <% if current_user %>
        <%= current_user.email %> 
        <%= link_to('Log Out', logout_path, class: "nav-link text-white") %>
      <% else %>
        <%= link_to('Login', login_path, class: "nav-link text-white") %>
      <% end %>


      </li>

      <li class="nav-item"><%= link_to('View Cart', cart_path, class: "nav-link text-white") %></li>
    </ul> 
      </div>

    </nav>
   <div id="content" class="container">
    <p id="notice" class="text-center"><%= notice %></p>
      <%= yield %>
   </div>
  </body>
</html>

