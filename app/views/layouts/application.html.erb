<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    


    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
        <!-- Bootstrap CSS and Font Awesome CDN-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
      .form-block{
      margin-top: 2%;
      margin-bottom: 2%;

      }
      .product-grid-item{
        padding:2%;
      }
      .search-form{
        margin-top: 4%;
        margin-bottom: 3%;
      }
      #content{
        margin-top: 2%;
      }
    </style>

  </head>


  </head>

  <body style="margin: 0; padding: 0;">
  
    <nav class="navbar navbar-dark bg-dark">
      <div class="container">
             <%= link_to('Ecommerce', products_path, class: 'navbar-brand') %>
           
    <ul class="navbar nav">

      
      <% if current_user %>
      <li class="nav-item text-white">
         <%= current_user.firstname %> 
      </li>
      <li class="nav-item">
       
        <%= link_to('Log Out', logout_path, class: "nav-link text-white") %>

      </li>

      <% else %>
       <li class="nav-item">
        <%= link_to('Login', login_path, class: "nav-link text-white") %>
          </li>

      <% end %>


    
      <li class="nav-item"><%= link_to('View Cart', cart_path, class: "nav-link text-white") %></li>
    </ul> 
      </div>

    </nav>
   <div id="content" class="container">
    <p id="notice" class="text-center"><%= notice %></p>
      <%= yield %>
   </div>

       <!-- Optional JavaScript Online CDN -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
  </body>
</html>

